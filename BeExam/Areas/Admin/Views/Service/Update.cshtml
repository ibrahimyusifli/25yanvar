@model UpdateServiceVM

<div class="card-body">
    <h4 class="card-title">Update form</h4>

    <form class="forms-sample" method="post" enctype="multipart/form-data">
        <div>
            <img src="~/assets/images/@Model.Image"/>
            <input asp-for="Image" type="hidden" class="form-control" placeholder="Photo">

        </div>
        <div class="form-group">
            <label asp-for="Photo">Photo</label>
            <input asp-for="Photo" class="form-control" placeholder="Photo">
            <span asp-validation-for="Photo"></span>
        </div>
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" type="text" class="form-control" placeholder="Name">
            <span asp-validation-for="Name"></span>
        </div>
        <button type="submit" class="btn btn-primary mr-2">Submit</button>
        <button class="btn btn-light">Cancel</button>
    </form>
</div>